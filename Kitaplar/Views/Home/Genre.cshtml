@model IPagedList<Book>
@{
    ViewData["Title"] = ViewBag.Genre.Name; 

}

<div class="d-flex justify-content-center py-2">
    @Html.PagedListPager(Model,
    page => Url.Action("Genre", new { id = ViewBag.Genre.Id, page = page })

        , BookManagerExtensions.PagedListOptions)
</div>
<partial name="_BookListPartial" model="@Model" />
<div class="d-flex justify-content-center py-2">
    @Html.PagedListPager(Model,
        page => Url.Action("Genre", new { id = ViewBag.Genre.Id, page = page })
        , BookManagerExtensions.PagedListOptions)
</div>