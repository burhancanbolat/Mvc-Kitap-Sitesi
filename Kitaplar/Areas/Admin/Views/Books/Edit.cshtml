@model Book
@{
     ViewData["title"] = "Kayıt Güncelleme";
}

    <div class="card-body">
        <h2>
            @ViewData["title"]
        </h2>
        <form method="post" enctype="multipart/form-data">
           
            <input type="hidden" asp-for="Image" />
            <div class="mb-3">
                <label class="form-label" asp-for="GenreId"></label>
                <select class="form-select" asp-for="GenreId" asp-items="@ViewBag.Genres">
                </select>
                <span asp-validation-for="GenreId"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Kitap adını yazınız...">
                <span asp-validation-for="Name"></span>
            </div>


            <div class="mb-3">
                <label class="form-label" asp-for="Editör"></label>
                <input class="form-control" asp-for="Editör">
                <span asp-validation-for="Editör"></span>
            </div><div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea asp-for="Description" class="summernote"></textarea>
                <span asp-validation-for="Description"></span>
            </div><div class="mb-3">
                <label class="form-label" asp-for="Writer"></label>
                <input class="form-control" asp-for="Writer">
                <span asp-validation-for="Writer"></span>
            </div><div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price"></span>
            </div>
            <div class="mb-3">
            <div class="py-3">
                <img src="@Model.Image" height="340" />
            </div>
        </div>
            <div class="mb-3">
            <div class="text-info">(Değiştirmek istiyorsanız seçiniz)</div>
                <label for="formFile" class="form-label" asp-for="Image"></label>
                <input class="form-control" type="file" id="imageFile" name="imageFile">
            </div>
            <hr />
            <button type="submit" class="btn btn-dark">
                Kaydet
            </button>
            <a class="btn btn-danger" asp-action="Index">İptal</a>
        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(() => {
            $('.summernote').summernote({
                height: 200
            });
        })
    </script>
}